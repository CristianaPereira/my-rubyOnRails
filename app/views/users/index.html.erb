<h1>Users <%=User.count%></h1>
<table>
  <tr>
    <th>Id</th>
    <th colspan="2">Username</th>
    <th>Email</th>
    <th>Articles</th>
    <th>Joined</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
      <span><%= user.id %></span>
    </td>
      <td>
      <span><%=gravatar_for(user, size: 20)%></span>
    </td>
    <td>
      <span><%= user.username %></span>
    </td>
    <td>
      <span><%= user.email %></span>
    </td>
    <td>
      <span><%= pluralize(user.articles.count, 'article') %></span>
    </td>
    <td>
      <span><%= time_ago_in_words(user.created_at) %> ago</span>
    </td>
    <td>
      <%= link_to 'View profile', user %>
    </td>
    <td>
      <%= link_to 'edit', edit_user_path(user) %>
    </td>
    <td>
      <%= button_to 'Delete', user_path(user), method: :delete%>
    </td>
  </tr>
<% end %>
</table>
<p><%= link_to "Home", home_path %></p>