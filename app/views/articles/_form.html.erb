<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @article, local:true) do |f| %>
  <p> <%= f.label :title %> </p>
  <%= f.text_field :title %>
  <p>
    <%= f.label :description%>
  </p>
  <%= f.text_area :description%>
  <%= f.submit %>
<% end%>