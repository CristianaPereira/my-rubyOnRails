<h1>List</h1>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<table class="table table-striped">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Author</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @articles.each do |article| %>
  <tr>
    <td>
      <span><%= article.id %></span>
    </td>
    <td>
      <span><%= article.title %></span>
    </td>
    <td>
      <span>
        <p>
          <%=link_to article.user do%>
            <%=gravatar_for(article.user, size: 20) + article.user.username%>
          <%end %>
        </p>
      </span>
    </td>
    <td>
      <%= link_to 'show', article_path(article), class: "btn btn-primary btn-sm" %>
    </td>
    <td>
      <%= link_to 'edit', edit_article_path(article), class: "btn btn-sm btn-success" %>
    </td>
    <td>
      <%= button_to 'Delete', article_path(article), method: :delete, class: "btn btn-sm btn-danger" %>
    </td>
  </tr>
<% end %>
</table>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<%= link_to "Create new", new_article_path %>
<p><%= link_to "Home", home_path %></p>